<script>
    $('#idBtnCancelPekerjaan').click(function () {
        $('#idMdlCreatePekerjaan').close;
        location.reload();
    });

    $('.ClBtnClosePekerjaan').click(function () {
        $('#idMdlCreatePekerjaan').close;
        location.reload();
    });

    $('#idBtnSubmitPekerjaan').click(function () {
        debugger;
        var company = $('#idInpNamaPerusahaan').val();
        var bulan = $('#idWaktuMasuk').val();
        var tahun = $('#idTahunMasuk').val();
        var posisi = $('#idInpNamaPosisi').val();
        if (company == "") {
            alert('Nama Perusahaan Tidak Boleh Kosong');
            $('#idInpNamaPerusahaan').focus();
        }
        else if (bulan == "") {
            alert('Waktu Masuk Bulan Tidak Boleh Kosong');
            $('#idWaktuMasuk').focus();
        }
        else if (tahun == "") {
            alert('Waktu Masuk Tahun Tidak Boleh Kosong');
            $('#idTahunMasuk').focus();
        }
        else if (posisi == "") {
            alert('Posisi Terakhir Tidak Boleh Kosong');
            $('#idInpNamaPosisi').focus();
        }
        else {
            var vDatapekerjaan = $('#idFrmSubmitPekerjaan').serialize();
            $.ajax({
                url: '/Pekerjaan/Save',
                data: vDatapekerjaan,
                method: 'Post',
                success: function (mdl) {
                    debugger;
                    if (mdl.Simpan == "Berhasil") {
                        alert("Data berhasil disimpan");
                        //$('.modal').modal('hide');
                        //$.modal.close();
                        $('#idMdlCreatePekerjaan').close;
                        location.reload();
                    }
                    else {
                        debugger;
                        alert("Data gagal disimpan");
                    }
                }
            });
        }
    });
</script>